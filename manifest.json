{
  "name": "shabdkosh",
  "description": "Easy to use dictionary and save words",
  "version": "1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "fav.png",
    "default_title" : "dictionary by nik"
  },
  "icons": {
    "128": "fav.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "api.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}